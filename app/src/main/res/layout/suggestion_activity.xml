<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff9999"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtname_suggestion_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:textColor="#d8033d"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtname_suggestion_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txtsubject_suggestion_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Subject:"
        android:textColor="#d8033d"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtsubject_suggestion_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txtmessage_suggestion_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Message:"
        android:textColor="#d8033d"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtmessage_suggestion_activity"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="4.36"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnSubmit_suggestion_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#d8033d"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</LinearLayout>